
<div id="navigation">


    <input id="toggle" class="item-btn" type="button"  value="&#xf067;"></input>

    <div id="toolbar">
        
        <input id="infos-open" class="toolbar-btn item-btn" type="button"  value="&#xf128;"></input>
        
        <!-- Open editor Button -->
        <% if (data.type !== 'editor') { %>
        <input class="toolbar-btn item-btn" type="button" onclick="openEditor()" value="&#xf196;"></input>
        <% } %>

        <!-- Return to first page Button -->
        <input class="toolbar-btn item-btn" type="button" onclick="index()" value="&#xf015;"></input>
    </div>

    <!-- Previous page Button -->
    <% if (typeof data.prevPage !== 'undefined' && typeof data.prevPage !== '' ) { %>
    <input class="nav-btn item-btn" type="button" onclick="prev()" value="&#xf100;"></input>
    <% } %>

    <!-- Grid page Button -->
    <% if (data.type !== 'previews') { %>
    <input class="nav-btn item-btn" type="button" onclick="preview()" value="&#xf00a;"></input>
    <% } %>

    <!-- Next page Button -->
    <% if (typeof data.nextPage !== 'undefined' && typeof data.nextPage !== '' ) { %>
    <input class="nav-btn item-btn" type="button" onclick="next()" value="&#xf101;"></input>
    <% } %>



</div>


<div id="infos">
    <div class="infos-header infos-box">
        <div class="head-left">
            <i class="fa fa-info" aria-hidden="true"></i>
            <i class="fa fa-question" aria-hidden="true"></i>
            &nbsp;-&nbsp;infos
        </div>
        <div class="head-right">
            <i id="infos-close" class="fa fa-times-circle-o" aria-hidden="true"></i>
        </div>
    </div>

    <div class="infos-content infos-box">
        <h4>What</h4>
        <p>&nbsp;- A simple site</p>
    </div>
</div>
